{
    "urls": "https://0:11001",

    "JwtBearerConfiguration": {
        "JwtSecurityKey": "RANDOM_KEY_MUST_NOT_BE_SHARED",
        "JwtIssuer": "Themis",
        "JwtAudience": "Tethys",
        "JwtExpiryForUser": 30,
        "JwtExpiryForClient": 1440
    },

    "Routes": [
        {
            "DownstreamPathTemplate": "/{url}",
            "DownstreamScheme": "https",
            "UpstreamPathTemplate": "/Ocelot/Themis/{url}",
            "UpstreamHttpMethod": [ "Get", "Post", "Put", "Patch", "Delete", "Options", "Head" ],
            "ServiceName": "IdentityServer-Themis",
            "UseServiceDiscovery": true,
            "LoadBalancerOptions": {
                "Type": "RoundRobin"
            }
        }
    ],
    "GlobalConfiguration": {
        "RequestIdKey": "GCRequestId",
        "BaseUrl": "https://localhost:11001",
        "ServiceDiscoveryProvider": {
            "Host": "127.0.0.1",
            "Port": 8500,
            "Type": "Consul"
        },
        "RateLimitOptions": {
            "DisableRateLimitHeaders": false,
            "QuotaExceededMessage": "Rate Limit!",
            "HttpStatuCode": 403
        }
    },

    "AgentServiceRegistrationConfiguration": {
        "ServicesProviderAddress": "http://localhost:8500",
        "ServiceName": "Gateway-Uranus",
        "ServiceInstanceId": "Gateway_Uranus_Dev_000",
        "SelfHost": "localhost",
        "SelfPort": "11001",
        "HealthCheckUrl": "https://localhost:11001/health/healthcheck"
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "ConnectionStrings": {
        "ServiceDB": "DATA SOURCE=.\\Service.db"
    },

    "AllowedHosts": "*"
}
