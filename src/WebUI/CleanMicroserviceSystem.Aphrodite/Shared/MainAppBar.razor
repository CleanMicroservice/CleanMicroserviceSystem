@inject PageTabsService pageTabsService

<MAppBar Color="white" Class="rounded-b-xl mb-0 mx-5" App Elevation="0">
    <MRow>
        <MCol>
        </MCol>
        <MCol Class="px-3" Cols=@("auto")>
            <MTextField @bind-Value="@this.SearchInput" Class="d-none d-lg-flex"
                        Style="width:280px;" BackgroundColor="grey lighten-4"
                        HideDetails=@("auto") Placeholder="Search"
                        Clearable Flat Dense Solo>
                <PrependInnerContent>
                    <MIcon Size=20 Class="neutral-lighten-1--text">mdi-magnify</MIcon>
                </PrependInnerContent>
            </MTextField>
        </MCol>
        <MCol Cols=@("auto")>
            <AvatarComponent />
        </MCol>
    </MRow>
</MAppBar>

@code {
    private string SearchInput { get; set; } = default!;
}
