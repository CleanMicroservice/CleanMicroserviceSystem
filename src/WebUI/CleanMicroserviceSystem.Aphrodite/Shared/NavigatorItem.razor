<MBorder Value=false Offset Width=4 Class="rounded-r-1" Border="Borders.Right">
    <MListItem Href="@this.TargetUri">
        <ItemContent>
            <MListItemIcon>
                <MIcon Color="@(GetIconColor(context.Active))">@this.Icon</MIcon>
            </MListItemIcon>
            <MListItemContent>
                <MListItemTitle>@this.Title</MListItemTitle>
            </MListItemContent>
        </ItemContent>
    </MListItem>
</MBorder>

@code {
    public const string IconActiveColor = "primary";
    public const string IconInactiveColor = "neutral-lighten-1";

    public static string GetIconColor(bool active)
    {
        return active ? IconActiveColor : IconInactiveColor;
    }

    [Parameter]
    public string TargetUri { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Title { get; set; }
}
