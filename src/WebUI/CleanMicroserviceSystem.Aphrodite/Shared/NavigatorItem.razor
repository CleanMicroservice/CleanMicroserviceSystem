<MListItem Href="@this.TargetUri" ActiveClass="@ItemActiveClass">
    <ItemContent>
        <MListItemIcon>
            <MIcon Color="@(GetIconColor(context.Active))">@this.Icon</MIcon>
        </MListItemIcon>
        <MListItemContent>
            <MListItemTitle>@this.Title</MListItemTitle>
        </MListItemContent>
    </ItemContent>
</MListItem>

@code {
    public const string ItemActiveClass = "primary--text";
    public const string IconActiveColor = "primary";
    public const string IconInactiveColor = "neutral-lighten-1";

    public static string GetIconColor(bool active)
    {
        return active ? IconActiveColor : IconInactiveColor;
    }

    [Parameter]
    public string TargetUri { get; set; } = default!;

    [Parameter]
    public string Icon { get; set; } = default!;

    [Parameter]
    public string Title { get; set; } = default!;
}
