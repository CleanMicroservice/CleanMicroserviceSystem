@inherits NavigationItemBase

<AuthorizeView Policy="@IdentityContract.ThemisAPIReadPolicyName">
    <Authorized>
        <MListGroup NoAction PrependIcon="mdi-security">
            <ActivatorContent>
                <MListItemTitle>Permissions</MListItemTitle>
            </ActivatorContent>
            <ChildContent>
                <!-- Identity -->
                <MListGroup NoAction SubGroup Value="true">
                    <ActivatorContent>
                        <MListItemContent>
                            <MListItemTitle>Identity</MListItemTitle>
                        </MListItemContent>
                    </ActivatorContent>
                    <ChildContent>
                        <!-- User -->
                        <MListItem Link>
                            <MListItemIcon>
                                <MIcon>mdi-shield-account</MIcon>
                            </MListItemIcon>
                            <MListItemTitle>User</MListItemTitle>
                        </MListItem>
                        <!-- Role -->
                        <MListItem Link>
                            <MListItemIcon>
                                <MIcon>mdi-account-group</MIcon>
                            </MListItemIcon>
                            <MListItemTitle>Role</MListItemTitle>
                        </MListItem>
                    </ChildContent>
                </MListGroup>
                <!-- Application -->
                <MListGroup NoAction SubGroup Value="true">
                    <ActivatorContent>
                        <MListItemContent>
                            <MListItemTitle>Application</MListItemTitle>
                        </MListItemContent>
                    </ActivatorContent>
                    <ChildContent>
                        <!-- Client -->
                        <MListItem Link>
                            <MListItemIcon>
                                <MIcon>mdi-application-array</MIcon>
                            </MListItemIcon>
                            <MListItemTitle>Client</MListItemTitle>
                        </MListItem>
                    </ChildContent>
                </MListGroup>
            </ChildContent>
        </MListGroup>
    </Authorized>
</AuthorizeView>

