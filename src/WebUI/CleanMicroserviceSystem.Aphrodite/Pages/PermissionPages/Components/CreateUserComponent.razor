<MRow>
    <MCol Cols="12">
        <MTextField Label="Name" @bind-Value="@this.UserRegisterRequest.UserName"
                    Color="primary" PrependInnerIcon="mdi-account"
                    HideDetails=@("auto") Clearable Filled Rounded Dense>
        </MTextField>
    </MCol>
    <MCol Cols="12">
        <MTextField Label="Email" @bind-Value="@this.UserRegisterRequest.Email"
                    Color="primary" PrependInnerIcon="mdi-email"
                    HideDetails=@("auto") Clearable Filled Rounded Dense>
        </MTextField>
    </MCol>
    <MCol Cols="12">
        <MTextField Label="Phone" @bind-Value="@this.UserRegisterRequest.PhoneNumber"
                    Color="primary" PrependInnerIcon="mdi-phone"
                    HideDetails=@("auto") Clearable Filled Rounded Dense>
        </MTextField>
    </MCol>
</MRow>

@code {
    [Parameter]
    public UserRegisterRequest UserRegisterRequest { get; set; }
}
