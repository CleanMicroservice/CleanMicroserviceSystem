<MRow>
    <MCol Cols="12">
        <MTextField Label="Name" @bind-Value="@this.UserUpdateRequest.UserName"
                    Color="primary" BackgroundColor="grey lighten-4" PrependInnerIcon="mdi-account"
                    HideDetails="@("auto")" Clearable Outlined Dense>
        </MTextField>
    </MCol>
    <MCol Cols="12">
        <MTextField Label="Email" @bind-Value="@this.UserUpdateRequest.Email"
                    Color="primary" BackgroundColor="grey lighten-4" PrependInnerIcon="mdi-email"
                    HideDetails="@("auto")" Clearable Outlined Dense>
        </MTextField>
    </MCol>
    <MCol Cols="12">
        <MTextField Label="Phone" @bind-Value="@this.UserUpdateRequest.PhoneNumber"
                    Color="primary" BackgroundColor="grey lighten-4" PrependInnerIcon="mdi-phone"
                    HideDetails="@("auto")" Clearable Outlined Dense>
        </MTextField>
    </MCol>
</MRow>

