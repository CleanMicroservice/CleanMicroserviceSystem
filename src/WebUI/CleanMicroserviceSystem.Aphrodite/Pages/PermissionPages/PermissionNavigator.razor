@inherits NavigatorBase

<AuthorizeView Policy="@IdentityContract.ThemisAPIReadPolicyName">
    <Authorized>
        <NavigatorGroup Group="@this.PermissionGroup" Icon="mdi-security" Title="Permissions">
            <NavigatorSubGroup Group=@this.IdentityGroup Title="Identity">
                <NavigatorItem Icon="mdi-shield-account" Title="User" TargetUri="@RouterContract.UsersUri" />
                <NavigatorItem Icon="mdi-account-group" Title="Role" TargetUri="@RouterContract.RolesUri" />
            </NavigatorSubGroup>
            <NavigatorSubGroup Group=@this.ApplicationGroup Title="Application">
                <NavigatorItem Icon="mdi-application-array" Title="Client" TargetUri="@RouterContract.ClientsUri" />
            </NavigatorSubGroup>
        </NavigatorGroup>
    </Authorized>
</AuthorizeView>

@code {
    private List<string> PermissionGroup = new List<string>()
    {
        RouterContract.UsersUri,
        RouterContract.UsersEditUri,
        RouterContract.RolesUri,
        RouterContract.RolesEditUri,
        RouterContract.ClientsUri,
        RouterContract.ClientsEditUri,
    };

    private List<string> IdentityGroup = new List<string>()
    {
        RouterContract.UsersUri,
        RouterContract.UsersEditUri,
        RouterContract.RolesUri,
        RouterContract.RolesEditUri,
    };

    private List<string> ApplicationGroup = new List<string>()
    {
        RouterContract.ClientsUri,
        RouterContract.ClientsEditUri,
    };
}
