@inherits NavigatorBase

<AuthorizeView Policy="@IdentityContract.ThemisAPIReadPolicyName">
    <Authorized>
        <MListGroup NoAction PrependIcon="mdi-security">
            <ActivatorContent>
                <MListItemTitle>Permissions</MListItemTitle>
            </ActivatorContent>
            <ChildContent>
                <!-- Identity -->
                <MListGroup NoAction SubGroup Value="true">
                    <ActivatorContent>
                        <MListItemContent>
                            <MListItemTitle>Identity</MListItemTitle>
                        </MListItemContent>
                    </ActivatorContent>
                    <ChildContent>
                        <!-- User -->
                        <MListItem ActiveClass="@NavigatorBase.ItemActiveClass" Link Href="@RouterContract.UsersUri">
                            <MListItemIcon>
                                <MIcon>mdi-shield-account</MIcon>
                            </MListItemIcon>
                            <MListItemTitle>User</MListItemTitle>
                        </MListItem>
                        <!-- Role -->
                        <MListItem ActiveClass="@NavigatorBase.ItemActiveClass" Link Href="@RouterContract.RolesUri">
                            <MListItemIcon>
                                <MIcon>mdi-account-group</MIcon>
                            </MListItemIcon>
                            <MListItemTitle>Role</MListItemTitle>
                        </MListItem>
                    </ChildContent>
                    </MListGroup>
                    <!-- Application -->
                    <MListGroup NoAction SubGroup Value="true">
                    <ActivatorContent>
                        <MListItemContent>
                            <MListItemTitle>Application</MListItemTitle>
                        </MListItemContent>
                    </ActivatorContent>
                    <ChildContent>
                        <!-- Client -->
                        <MListItem ActiveClass="@NavigatorBase.ItemActiveClass" Link Href="@RouterContract.ClientsUri">
                            <MListItemIcon>
                                <MIcon>mdi-application-array</MIcon>
                            </MListItemIcon>
                            <MListItemTitle>Client</MListItemTitle>
                        </MListItem>
                    </ChildContent>
                    </MListGroup>
                </ChildContent>
                </MListGroup>
            </Authorized>
            </AuthorizeView>

            @code {

}
