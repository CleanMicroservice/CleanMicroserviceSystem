@page "/system/unauthorized"
@attribute [AllowAnonymous]
@inject NavigationManager navigationManager

<PageTitle>Unauthorized</PageTitle>

<MContainer Class="mt-10">
    <MRow Justify="@JustifyTypes.Center"
          NoGutters>
        <MSpacer></MSpacer>
        <MCol Cols=@("auto")>
            <MImage Src="/img/status/401.png" Width="350" Height="200"></MImage>
            <AuthorizeView>
                <NotAuthorized>
                    <MButton Outlined Block Color="primary" OnClick="()=>navigationManager.NavigateTo(RouterContract.LoginUri)">Login</MButton>
                </NotAuthorized>
                <Authorized>
                    <MButton Outlined Block Color="primary" OnClick="()=>navigationManager.NavigateTo(RouterContract.StartUri)">Home</MButton>
                </Authorized>
            </AuthorizeView>
        </MCol>
        <MSpacer></MSpacer>
    </MRow>
</MContainer>

