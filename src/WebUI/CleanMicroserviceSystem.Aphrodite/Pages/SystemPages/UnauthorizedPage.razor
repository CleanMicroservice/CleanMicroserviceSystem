@page "/system/unauthorized"
@attribute [AllowAnonymous]
@inject NavigationManager navigationManager

<PageTitle>Unauthorized</PageTitle>

<MContainer Class="mt-10">
    <MRow Justify="@JustifyTypes.Center"
          NoGutters>
        <MSpacer></MSpacer>
        <MCol Cols="@("auto")">
            <MImage Src="/img/status/401.png" Width="350" Height="200"></MImage>
            <MButton Outlined Block Color="primary" OnClick="()=>navigationManager.NavigateTo(DefaultUrl)">Home</MButton>
        </MCol>
        <MSpacer></MSpacer>
    </MRow>
</MContainer>

@code {
    private const string DefaultUrl = "/";
}
